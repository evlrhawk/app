<?xml version="1.0" encoding="utf-8"?>


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:text="Help"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:text="Thank you for downloading Party Queue!"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:text="How do I start a Party Queue?"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:text="A Spotify Premium account is required to host. After logging in, music will stream to the host's device. All devices must be connected to the same Wi-Fi network to use the queue."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:text="Guests can use the native Android or iOS app interchangably, or you can share a link to the web interface by selecting “Options -> Share”."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:text="Do I need Spotify Premium as a guest?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:text="Nope! Only the device hosting the party needs to be logged into a Spotify Premium account."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:text="Why can't I join the party?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:text="Make sure you're on the same Wi-Fi network as the host. If the party doesn't show up in the Join Party page, the network may be blocking the party discovery service. In this case, have the host share the web interface link."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:text="How are songs ordered?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:text="When a song request is received, the host factors in the number of songs requested by that user; the ordering is designed to be fair, discouraging guests from hogging the queue."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_marginBottom="6dp"/>
        </LinearLayout>
    </ScrollView>